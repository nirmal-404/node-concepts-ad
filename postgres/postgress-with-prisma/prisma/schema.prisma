generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// This file will be used for any model that you want to create this project

model Book {
  id           Int      @id @default(autoincrement())
  title        String
  publisedDate DateTime
  authorId     Int
  author       Author   @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}